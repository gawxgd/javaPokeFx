<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="root" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javapokemonfx.battle_view.BattleView" spacing="20" style="-fx-background-color: #f5f5f5; -fx-padding: 20;">

    <Label fx:id="teamLabel" text="Your Team" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <ListView fx:id="playerPokemonList" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-font-size: 16px; -fx-padding: 10; -fx-pref-height: 200;" />

    <Label fx:id="opponentLabel" text="Opponent's Team" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <ListView fx:id="opponentPokemonList" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-font-size: 16px; -fx-padding: 10; -fx-pref-height: 200;" />

    <Button fx:id="fightButton" text="Fight" onAction="#handleFight"
            style="-fx-font-size: 16px; -fx-padding: 10 20; -fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5;" />

    <Button fx:id="newTeamButton" text="New Team" onAction="#handleNewTeam"
            style="-fx-font-size: 16px; -fx-padding: 10 20; -fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5;" />
</VBox>
