<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javapokemonfx.berry_details_view.BerryDetailsView">
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f5f5f5; -fx-padding: 20;">
        <!-- Berry Name -->
        <Label fx:id="berryName" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-alignment: center;" />

        <!-- Berry Growth Time -->
        <Label fx:id="berryGrowthTime" style="-fx-font-size: 18px; -fx-font-weight: normal; -fx-text-fill: #666;" />

        <!-- Berry Harvest Time -->
        <Label fx:id="berryHarvestTime" style="-fx-font-size: 18px; -fx-font-weight: normal; -fx-text-fill: #666;" />

        <!-- Berry Gift Power -->
        <Label fx:id="berryGiftPower" style="-fx-font-size: 18px; -fx-font-weight: normal; -fx-text-fill: #666;" />

        <!-- Back to List Button -->
        <Button text="Back to List" onAction="#onBackButtonClicked" style="-fx-font-size: 16px; -fx-padding: 10 20; -fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5;" />
    </VBox>
</StackPane>
