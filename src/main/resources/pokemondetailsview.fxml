<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javapokemonfx.pokemon_details_view.PokemonDetailsView">
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #FFFFFF; -fx-padding: 20;">
        <ImageView fx:id="pokemonImage" fitWidth="250" fitHeight="250" />
        <Label fx:id="pokemonName" style="-fx-font-size: 30px; -fx-font-weight: bold;" />
        <Label fx:id="pokemonBaseExperience" style="-fx-font-size: 18px;" />
        <Label fx:id="pokemonHeight" style="-fx-font-size: 18px;" />
        <Label fx:id="pokemonWeight" style="-fx-font-size: 18px;" />
        <Button text="Back to List" onAction="#onBackButtonClicked" style="-fx-font-size: 16px; -fx-padding: 10 20;" />
    </VBox>
</StackPane>
