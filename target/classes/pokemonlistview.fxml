<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javapokemonfx.pokemon_list_view.PokemonListView" spacing="20" style="-fx-background-color: #f9f9f9; -fx-padding: 20;">
    <!-- Status Label for Loading -->
    <Label fx:id="statusLabel" text="Loading Pokémon list..." style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <!-- Filters Section -->
    <HBox spacing="20" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-radius: 5; -fx-border-color: #cccccc; -fx-border-width: 1;">
        <!-- Name Filter -->
        <VBox spacing="10">
            <Label text="Search by Name" style="-fx-font-size: 14; -fx-font-weight: bold;" />
            <TextField fx:id="filterTextField" promptText="Search by Name" style="-fx-font-size: 14; -fx-padding: 8; -fx-background-color: #f5f5f5;" />
        </VBox>

        <!-- Height Filter (Min/Max) -->
        <VBox spacing="10">
            <Label text="Min Height" style="-fx-font-size: 14; -fx-font-weight: bold;" />
            <TextField fx:id="minHeightFilterTextField" promptText="Min Height" style="-fx-font-size: 14; -fx-padding: 8; -fx-background-color: #f5f5f5;" />
            <Label text="Max Height" style="-fx-font-size: 14; -fx-font-weight: bold;" />
            <TextField fx:id="maxHeightFilterTextField" promptText="Max Height" style="-fx-font-size: 14; -fx-padding: 8; -fx-background-color: #f5f5f5;" />
        </VBox>

        <!-- Weight Filter (Min/Max) -->
        <VBox spacing="10">
            <Label text="Min Weight" style="-fx-font-size: 14; -fx-font-weight: bold;" />
            <TextField fx:id="minWeightFilterTextField" promptText="Min Weight" style="-fx-font-size: 14; -fx-padding: 8; -fx-background-color: #f5f5f5;" />
            <Label text="Max Weight" style="-fx-font-size: 14; -fx-font-weight: bold;" />
            <TextField fx:id="maxWeightFilterTextField" promptText="Max Weight" style="-fx-font-size: 14; -fx-padding: 8; -fx-background-color: #f5f5f5;" />
        </VBox>

        <!-- Experience Filter (Min/Max) -->
        <VBox spacing="10">
            <Label text="Min Experience" style="-fx-font-size: 14; -fx-font-weight: bold;" />
            <TextField fx:id="minExperienceFilterTextField" promptText="Min Experience" style="-fx-font-size: 14; -fx-padding: 8; -fx-background-color: #f5f5f5;" />
            <Label text="Max Experience" style="-fx-font-size: 14; -fx-font-weight: bold;" />
            <TextField fx:id="maxExperienceFilterTextField" promptText="Max Experience" style="-fx-font-size: 14; -fx-padding: 8; -fx-background-color: #f5f5f5;" />
        </VBox>
    </HBox>

    <!-- Clear Filters Button -->
    <Button fx:id="clearFiltersButton" text="Clear Filters" onAction="#handleClearFilters"
            style="-fx-background-color: #ffcc00; -fx-text-fill: #333; -fx-font-size: 16; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-weight: bold; -fx-alignment: center;" />

    <!-- List View for Pokémon -->
    <ListView fx:id="pokemonListView" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-font-size: 14; -fx-padding: 10; -fx-pref-height: 400;" />
</VBox>
