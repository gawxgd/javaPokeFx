<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javapokemonfx.favorite_pokemon_view.FavoritePokemonView" spacing="15" style="-fx-background-color: #f5f5f5; -fx-padding: 20;">

    <ListView fx:id="favoritePokemonList" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-font-size: 16px; -fx-padding: 10; -fx-pref-height: 300;" />

    <Button text="Delete" onAction="#onDeleteButtonClicked"
            style="-fx-font-size: 16px; -fx-padding: 10 20; -fx-background-color: #ff6347; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5;" />

    <Button text="Clear List" onAction="#onClearButtonClicked"
            style="-fx-font-size: 16px; -fx-padding: 10 20; -fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5;" />
</VBox>
