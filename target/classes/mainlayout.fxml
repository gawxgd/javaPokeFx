<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javapokemonfx.controllers.MainController"
            style="-fx-background-color: #f8f9fa; -fx-padding: 10;">
    <left>
        <!-- Sidebar ListView -->
        <ListView fx:id="sidebar"
                  style="-fx-background-color: #ffffff;
                         -fx-border-color: #cccccc;
                         -fx-border-width: 1;
                         -fx-padding: 10;
                         -fx-font-size: 14;"
                  prefWidth="200" />
    </left>
    <center>
        <!-- Main Content Area -->
        <StackPane fx:id="contentArea"
                   style="-fx-background-color: #ffffff;
                          -fx-border-color: #cccccc;
                          -fx-border-width: 1;
                          -fx-padding: 20;">
            <!-- Placeholder Text -->
            <Label text="Select an item from the sidebar..."
                   style="-fx-font-size: 16;
                          -fx-text-fill: #777;" />
        </StackPane>
    </center>
</BorderPane>
